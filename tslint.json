{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "tslint-config-airbnb",
        "tslint-config-security"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "curly": false,
        "no-console": false,
        "max-line-length": [
            true,
            180
        ],
        "radix": false
    },
    "linterOptions": {
        "exclude": [
            "I*.ts",
            "src/models/Note.ts"
        ]
    }
}
